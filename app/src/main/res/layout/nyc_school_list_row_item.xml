<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/spacing_2x"
    android:layout_marginEnd="@dimen/spacing_2x">

    <TextView
        android:id="@+id/nyc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_1x"
        android:ellipsize="end"
        android:focusable="false"
        android:maxEms="20"
        android:maxLines="2"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/full_name"
        android:layout_marginEnd="@dimen/spacing_1x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sanjana Gujjar " />

    <TextView
        android:id="@+id/nyc_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body"
        android:layout_marginTop="@dimen/spacing_1x"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginEnd="@dimen/spacing_1x"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nyc_name"
        tools:text="Employee Type"/>

    <TextView
        android:id="@+id/nyc_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body"
        android:layout_marginTop="@dimen/spacing_1x"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Employee Type"
        android:layout_marginEnd="@dimen/spacing_1x"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nyc_website" />

    <TextView
        android:id="@+id/emp_email_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="@dimen/spacing_1x"
        tools:text="Employee Type"
        android:layout_marginEnd="@dimen/spacing_1x"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nyc_type" />

    <TextView
        android:id="@+id/emp_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body"
        android:layout_marginTop="@dimen/spacing_1x"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Employee Type"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emp_email_address" />

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="@dimen/spacing_1x"
        android:textColor="@color/black"
        tools:text="Employee Type try long string Employee Type try long string"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emp_phone_number" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_1x"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location" />

</androidx.constraintlayout.widget.ConstraintLayout>